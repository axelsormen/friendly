<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" /> 
    <title>@ViewData["Title"] - friendly</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"> <!-- Bootstrap CSS for styling -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"> <!-- Font Awesome icons -->
    <script src="~/js/jquery.min.js"></script> <!-- jQuery library -->
    <script src="~/lib/jquery-validate/jquery.validate.js"></script> <!-- jQuery validation plugin -->
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script> <!-- jQuery unobtrusive validation -->
</head>
<body>
    <header>
        <!-- Navbar setup -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand link that points to the home page -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">friendly</a>
                <!-- Button to toggle the navbar for smaller screens (mobile responsive) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Navbar links -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Post" asp-action="Table">Posts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Table">Users</a>
                        </li>
                    </ul>
                    <!-- Partial view for the login section -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content area -->
    <div class="container">
        <main role="main" class="pb-3">
            <!-- Render the body of the current view here -->
            @RenderBody()

            <!-- Render any additional scripts for this view, if defined -->
            @RenderSection("Scripts", required: false)
        </main>
    </div>
</body>
</html>

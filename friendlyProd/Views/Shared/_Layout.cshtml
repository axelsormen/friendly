<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - friendly</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        /* Custom pink theme styles */
        body {
            background-color: #ffe6f2; /* Light pink background */
            color: #4b2c35; /* Darker pink text */
        }
        .navbar {
            background-color: #ffb3d9 !important; /* Light pink navbar */
            border-bottom: 3px solid #ff99cc; /* Slightly darker border */
        }
        .navbar-brand {
            color: #4b2c35 !important; /* Darker text for brand */
            font-weight: bold;
        }
        .nav-link {
            color: #4b2c35 !important; /* Darker pink for navigation links */
        }
        .nav-link:hover {
            color: #ff66a3 !important; /* Bright pink hover */
        }
        .container {
            background-color: #fff; /* White content background */
            border: 5px solid #ffb3d9; /* Pink border for content */
            border-radius: 10px; /* Rounded corners */
            padding: 20px; /* Spacing inside */
            margin-top: 20px; /* Spacing from the top */
        }
        footer {
            background-color: #ffb3d9; /* Light pink footer */
            color: #4b2c35; /* Darker pink text */
            text-align: center;
            padding: 10px;
            margin-top: 20px;
            border-top: 3px solid #ff99cc; /* Slightly darker border */
        }
    </style>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">friendly</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Post" asp-action="Table">Posts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="User" asp-action="Table">Users</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </main>
    </div>
    <footer>
        &copy; 2024 - friendly - All Rights Reserved
    </footer>
</body>
</html>

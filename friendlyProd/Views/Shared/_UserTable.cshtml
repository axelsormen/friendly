@model IEnumerable<User>

<div class="container">
    <table class='table table-striped'>
        <thead>
            <tr>
                <th>Profile Image</th> <!-- Header for profile image -->
                <th>Username</th> <!-- Header for username -->
                <th>Name</th> <!-- Header for full name -->
                <th>Email</th> <!-- Header forr email address -->
                <th>Phone Number</th> <!-- Header for phone number -->
            </tr>
        </thead>
        <tbody>
            <!-- Iterate over the list of users -->
            @foreach (var user in Model) 
            {
                <tr>
                    <td>
                        <!-- Check if the user has a profile image -->
                        @if (!string.IsNullOrEmpty(user.ProfileImageUrl)) 
                        {
                            <img alt="@user.UserName" 
                                src="@user.ProfileImageUrl" 
                                class="img-fluid rounded-circle mb-3" 
                                style="width: 50px; height: 50px; object-fit: cover;" /> <!-- Display user's profile image -->
                        }
                        else
                        {
                            <img alt="No Profile Image" 
                                src="/uploads/profile-images/defaultprofileimage.jpg" 
                                class="img-fluid rounded-circle mb-3" 
                                style="width: 50px; height: 50px; object-fit: cover;" /> <!-- Display a default profile image -->
                        }
                    </td>
                    <td>
                        <!-- Link to the user's details page -->
                        <strong><a asp-controller="User" asp-action="Details" asp-route-id="@user.Id" class="text-dark">@user.UserName</a></strong>
                    </td>
                    <td>
                        <!-- Check if both first and last names exist -->
                        @if (!string.IsNullOrEmpty(user.FirstName) && !string.IsNullOrEmpty(user.LastName))
                        {
                            <p>@user.FirstName @user.LastName</p> 
                        }
                        <!-- Check if only the first name exists -->
                        else if (!string.IsNullOrEmpty(user.FirstName))
                        {
                            <p>@user.FirstName</p>
                        }
                        <!-- Check if only the last name exists -->
                        else if (!string.IsNullOrEmpty(user.LastName))
                        {
                            <p>@user.LastName</p>
                        }
                        else
                        {
                            <p><i>Unknown</i></p>
                        }
                    </td>
                    <td>@user.Email</td> 
                    <td>
                        <!-- Check if phone number exists -->
                        @if (!string.IsNullOrEmpty(user.PhoneNumber))
                        {
                            <p>@user.PhoneNumber</p>
                        }
                        else
                        {
                            <p><i>Missing</i></p>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

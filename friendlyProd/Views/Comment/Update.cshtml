@model Comment

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Card structure -->
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="card-title">Edit Comment</h3>
                    <hr />

                    @if (Model.Post != null)
                    {
                        <div class="mb-4">
                            <img src="@Model.Post.PostImagePath" alt="Post Image" class="img-fluid" style="max-height: 300px; object-fit: cover; width: 100%;" />
                        </div>
                        <div>
                            <h5>@Model.Post.Caption</h5>
                        </div>
                    }
                    <hr />

                    <!-- Edit comment form -->
                    <form asp-action="Update" method="post">
                        <input type="hidden" asp-for="CommentId" />
                        <input type="hidden" asp-for="PostId" /> 

                        <div class="form-group">
                            <label for="CommentText">Update your comment</label>
                            <textarea asp-for="CommentText" class="form-control" placeholder="Enter new comment" rows="4"></textarea>
                            <span asp-validation-for="CommentText" class="text-danger"></span> <!-- Validation -->
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-controller="Post" asp-action="Table" asp-route-id="@Model.PostId" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

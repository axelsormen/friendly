@model Post

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Card structure -->
                <div class="card-body text-center">
                    <h3 class="card-title text-danger">Are you sure you want to delete this post?</h3>
                    <p class="text-muted">This action cannot be undone.</p>
                    <hr />

                    <!-- Post image -->
                    <div class="mb-4">
                        <img src="@Model.PostImagePath" alt="Post Image" class="img-fluid" style="max-height: 300px; object-fit: cover; width: 100%;" />
                    </div>

                    <!-- Post caption -->
                    <p class="card-text"><strong>@Model.Caption</strong></p>

                    <!-- Post date -->
                    <p class="text-muted"><small>@Model.PostDate</small></p>

                    <hr />

                    <!-- Delete confirmation form -->
                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.PostId" method="post">
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Table" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>
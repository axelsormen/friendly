@model Post

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Card structure for better organization -->
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="card-title">Edit Caption</h3>
                    <hr />

                    <!-- Post image -->
                    <div class="mb-4">
                        <img src="@Model.PostImagePath" alt="Post Image" class="img-fluid" style="max-height: 300px; object-fit: cover; width: 100%;" />
                    </div>

                    <!-- Edit caption form -->
                    <form asp-action="Update" method="post">
                        <input type="hidden" asp-for="PostId" />

                        <div class="form-group">
                            <label for="Caption">Update your caption</label>
                            <input asp-for="Caption" class="form-control" placeholder="Enter new caption" />
                            <span asp-validation-for="Caption" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-action="Table" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
